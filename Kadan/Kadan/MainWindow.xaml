<Window x:Class="Kadan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kadan"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Height="400" Width="900"/>

        <Button x:Name="button" Content="Get music!" HorizontalAlignment="Left" Margin="850,500,0,0" VerticalAlignment="Top" Width="100" Height="40" Click="button_Click"/>
        <TextBox x:Name="textBox" FontSize="20" HorizontalAlignment="Left" Height="40" Margin="50,500,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="750"/>
        <Label x:Name="label" Content="Enter directory here, please" HorizontalAlignment="Left" Margin="50,475,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Window>
