<Window x:Class="Kadan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kadan"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Height="400" Width="900" ColumnWidth ="150" HorizontalScrollBarVisibility="Disabled" IsReadOnly="True" SelectionChanged="dataGrid_SelectionChanged"/>
        <Button x:Name="buttonGet" Content="Get music!" HorizontalAlignment="Left" Margin="850,500,0,0" VerticalAlignment="Top" Width="100" Height="40" Click="button_GetClick"/>
        <Label x:Name="label" Content="Choose directory, please" HorizontalAlignment="Left" Margin="50,475,0,0" VerticalAlignment="Top" Width="750"/>
        <Button x:Name="buttonClear" Content="Clear DB!" HorizontalAlignment="Left" Margin="732,500,0,0" VerticalAlignment="Top" Width="100" Height="40" Click="button_ClearClick"/>
    </Grid>
</Window>
